{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "paths": {
      "@/*": ["../apps/vercel/src/*"],
      "@trkn-vercel/*": ["../apps/vercel/src/*"],
      "@trkn-shared": ["../packages/shared/src"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
