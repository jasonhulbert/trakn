{
  "name": "trkn",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "add:all": "pnpm add -w",
    "add:web": "pnpm --filter trkn-web add",
    "add:web:dev": "pnpm --filter trkn-web add -D",
    "add:supabase": "pnpm --filter trkn-supabase add",
    "add:supabase:dev": "pnpm --filter trkn-supabase add -D",
    "add:shared": "pnpm --filter trkn-shared add",
    "add:shared:dev": "pnpm --filter trkn-shared add -D",
    "dev:web": "pnpm --filter trkn-web start",
    "build:web": "pnpm --filter trkn-web build",
    "test:web": "pnpm --filter trkn-web test",
    "install:all": "pnpm install",
    "lint:all": "pnpm -r lint",
    "lint:fix:all": "pnpm -r lint:fix",
    "format:all": "pnpm -r format",
    "format:check:all": "pnpm -r format:check"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.54.0"
  }
}
