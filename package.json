{
  "name": "trkn",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "add:all": "pnpm add -w",
    "add:web": "pnpm --filter trkn-web add",
    "add:web:dev": "pnpm --filter trkn-web add -D",
    "add:vercel": "pnpm --filter trkn-vercel add",
    "add:vercel:dev": "pnpm --filter trkn-vercel add -D",
    "add:supabase": "pnpm --filter trkn-supabase add",
    "add:supabase:dev": "pnpm --filter trkn-supabase add -D",
    "add:shared": "pnpm --filter trkn-shared add",
    "add:shared:dev": "pnpm --filter trkn-shared add -D",
    "dev:web": "node scripts/set-env.js && pnpm --filter trkn-web start",
    "dev:vercel": "vercel dev",
    "dev:all": "concurrently \"pnpm dev:web\" \"pnpm dev:vercel\"",
    "build:web": "node scripts/set-env.js && pnpm --filter trkn-web build",
    "build:vercel": "pnpm --filter trkn-vercel build",
    "test:web": "pnpm --filter trkn-web test",
    "test:vercel": "pnpm --filter trkn-vercel test",
    "install:all": "pnpm install",
    "lint:all": "pnpm -r lint",
    "lint:fix:all": "pnpm -r lint:fix",
    "format:all": "pnpm -r format",
    "format:check:all": "pnpm -r format:check",
    "postinstall": "node scripts/set-env.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3"
  },
  "pnpm": {
    "overrides": {
      "path-to-regexp@>=6.0.0 <6.3.0": "6.3.0"
    }
  }
}
